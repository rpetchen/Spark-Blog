{{#partial "content"}}

   <h2>Edit Blog: {{entry.title}} </h2>
   <a href="/">Return to home page</a>
  <hr>
  
   <div class="formBlog">
      <form action="/editBlog/{{entry.slug}}" method="post">
      <label for="blogTitle">Blog Title:</label>
         <input type="text" name="blogTitle"  value="{{entry.title}}"/>
       <label for="blogBody">Blog Body:</label>
         <textarea rows="7" name="blogBody" >{{entry.body}}</textarea>
         <input type="submit" value="Submit Change" />
      </form>
   </div>


{{/partial}}
{{> base.hbs}}